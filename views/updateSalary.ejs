  <main class="app-content">
    <div class="app-title">
      <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">Bản kê lương</li>
        <li class="breadcrumb-item"><a href="#">Cập nhật</a></li>
      </ul>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title">Cập nhật bảng kê lương</h3>
          <div class="tile-body">
            <div class="row element-button">
              <div class="col-sm-2">
                
              </div>

            </div>
            <form class="row" method="post" action="/salaryUpdate/<%=Salaries.id%>">
              <div class="form-group col-md-3">
                <label class="control-label">Tên nhân viên</label>
                <input class="form-control" type="text" id="name" value="<%=staff.name%>" readonly>
              </div>

              <div class="form-group col-md-3">
                <label class="control-label">Giới tính</label>
                <input class="form-control" type="text" id="genderInput" value="<%=staff.gender%>" readonly>
              </div>

              <div class="form-group col-md-3">
                <label for="exampleSelect1" class="control-label">Chức vụ</label>
                <input class="form-control" type="text" id="positionInput" value="<%=staff.position%>" readonly>
              </div>
              <div class="form-group col-md-3">
                <label class="control-label">Tiền lương</label>
                <div class="input-group">
                  <input class="form-control" type="number" value="<%=Salaries.salary%>" id="salaryInput" name="salary" readonly>
                  <div class="input-group-append">
                    <span class="input-group-text">VND</span>
                  </div>
                </div>
              </div>

              <div class="form-group col-md-3">
                <label class="control-label">Trừ lương</label>
                <div class="input-group">
                  <input class="form-control" type="number" id="deductionInput" value="<%=Salaries.salaryDeduction%>" name="salaryDeduction" readonly>
                  <div class="input-group-append">
                    <span class="input-group-text">VND</span>
                  </div>
                </div>
              </div>

              <div class="form-group col-md-3">
                <label class="control-label">Tổng nhận</label>
                <div class="input-group">
                  <input class="form-control" type="number" value="<%=Salaries.totalPrice%>" id="totalReceivedInput" readonly>
                  <div class="input-group-append">
                    <span class="input-group-text">VND</span>
                  </div>
                </div>
              </div>
              <div class="form-group col-md-3">
                <label for="exampleSelect1" class="control-label">Trạng thái</label>
                <select class="form-control" id="exampleSelect1" name="status" required>
                    <option value="">-- Chọn trạng thái --</option>
                    <% if (Salaries.status === 1) { %>
                      <option value="1" selected>Đã nhận tiền</option>
                      <option value="0">Chưa nhận tiền</option>
                    <% } else { %>
                      <option value="1">Đã nhận tiền</option>
                      <option value="0" selected>Chưa nhận tiền</option>
                    <% } %>
                  </select>
                  
              </div>


          </div>
          <button class="btn btn-save" type="submit">Lưu lại</button>
          <a class="btn btn-cancel" href="/salary">Hủy bỏ</a>
          </form>
        </div>
  </main>


