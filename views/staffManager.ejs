    <script>
      function deleteRow(r) {
        var i = r.parentNode.parentNode.rowIndex;
        document.getElementById("myTable").deleteRow(i);
      }
      jQuery(function () {
        jQuery(".trash").click(function () {
          swal({
            title: "Cảnh báo",
            text: "Bạn có chắc chắn là muốn xóa nhân viên này?",
            buttons: ["Hủy bỏ", "Đồng ý"],
          })
            .then((willDelete) => {
              if (willDelete) {
                // Lấy id của nhân viên từ hàng chứa nút xóa
                const staffId = jQuery(this).closest('tr').find('[name="check1"]').val();
                // Gọi hàm xóa với id đã lấy
                deleteStaff(staffId);
              }
            });
        });
      });
      oTable = $('#sampleTable').dataTable();
      $('#all').click(function (e) {
        $('#sampleTable tbody :checkbox').prop('checked', $(this).is(':checked'));
        e.stopImmediatePropagation();
      });

      function deleteStaff(id) {
        // Gọi API xóa với id của nhân viên
        // Sử dụng thư viện fetch hoặc axios để thực hiện HTTP request
        fetch(`/api/staff/${id}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            // Các header khác nếu cần thiết
          },
        })
          .then(response => response.json())
          .then(data => {
            // Xử lý kết quả từ API (có thể cập nhật giao diện, hiển thị thông báo, v.v.)
            console.log('Staff deleted successfully:', data);
            // Thực hiện các bước cần thiết sau khi xóa, nếu có
          })
          .catch(error => {
            console.error('Error deleting staff:', error);
            // Xử lý lỗi nếu cần thiết
          });
      }


      //Thời Gian
      function time() {
        var today = new Date();
        var weekday = new Array(7);
        weekday[0] = "Chủ Nhật";
        weekday[1] = "Thứ Hai";
        weekday[2] = "Thứ Ba";
        weekday[3] = "Thứ Tư";
        weekday[4] = "Thứ Năm";
        weekday[5] = "Thứ Sáu";
        weekday[6] = "Thứ Bảy";
        var day = weekday[today.getDay()];
        var dd = today.getDate();
        var mm = today.getMonth() + 1;
        var yyyy = today.getFullYear();
        var h = today.getHours();
        var m = today.getMinutes();
        var s = today.getSeconds();
        m = checkTime(m);
        s = checkTime(s);
        nowTime = h + " giờ " + m + " phút " + s + " giây";
        if (dd < 10) {
          dd = '0' + dd
        }
        if (mm < 10) {
          mm = '0' + mm
        }
        today = day + ', ' + dd + '/' + mm + '/' + yyyy;
        tmp = '<span class="date"> ' + today + ' - ' + nowTime +
          '</span>';
        document.getElementById("clock").innerHTML = tmp;
        clocktime = setTimeout("time()", "1000", "Javascript");

        function checkTime(i) {
          if (i < 10) {
            i = "0" + i;
          }
          return i;
        }
      }
