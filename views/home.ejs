    <script>
      // Đặt hàm formatDate dưới dạng biến global
      window.formatDate = function (dateString) {
        const date = new Date(dateString);
        const day = date.getDate().toString().padStart(2, '0');
        const month = (date.getMonth() + 1).toString().padStart(2, '0');
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
      };
    </script>
    <script type="text/javascript">


      async function fetchDataAndRenderChart() {
        try {
          // Gọi API để lấy dữ liệu từ server
          const response = await fetch('http://localhost:3000/home/RevenueInMonth');
          const data = await response.json();
          const labels = [];
          const revenueData =[];
          data.data.forEach(item => {
            labels.push(item.month);
            revenueData.push(item.revenue);
          });

          const intLabels = labels.map(month => parseInt(month));
          updateChart(intLabels, revenueData);
        } catch (error) {
          console.error('Error fetching data from API:', error);
        }
      }

      // Hàm để cập nhật biểu đồ với dữ liệu mới
      function updateChart(labels, data) {
        const myChart = new Chart("myChart", {
          type: "line",
          data: {
            labels: labels,
            datasets: [{
              label: "Doanh thu thực tế",
              data: data,
              borderColor: "green",
              fill: false
            }]
          },
          options: {
            legend: { display: true }
          }
        });
      }

      // Gọi hàm để bắt đầu quá trình
      fetchDataAndRenderChart();








      async function fetchDataAndRenderBarChart() {
        try {
          // Gọi API để lấy dữ liệu từ server
          const response = await fetch('http://localhost:3000/home/OrderInMonth');
          const data = await response.json();

          // Trích xuất dữ liệu từ API response (phụ thuộc vào cấu trúc của API)
          const xValues = [];
          const yValues = [];
          const zValues = [];
          const aValues = [];
          const cancelValues = [];

          data.data.forEach(item => {
            xValues.push(item.month);
            yValues.push(item.totalOrder.orderCountByStatus);
            zValues.push(item.totalOrder.orderCountByStatus1);
            aValues.push(item.totalOrder.orderCountByStatus2);
            cancelValues.push(item.totalOrder.orderCountByStatus3);

          });

          // Cập nhật biểu đồ với dữ liệu mới
          updateBarChart(xValues, yValues, zValues, aValues, cancelValues);
        } catch (error) {
          console.error('Lỗi khi lấy dữ liệu từ API:', error);
        }
      }
      // Hàm để cập nhật biểu đồ cột với dữ liệu mới
      function updateBarChart(xValues, yValues, zValues, aValues, cancelValues) {
        new Chart("myChartb", {
          type: "bar",
          data: {
            labels: xValues,
            datasets: [
              {
                label: "Chờ xác nhận",
                backgroundColor: "purple",
                data: yValues,
              },
              {
                label: "Đang vận chuyển",
                backgroundColor: "yellow",
                data: zValues,
              },
              {
                label: "Đã nhận",
                backgroundColor: "green",
                data: aValues,
              },
              {
                label: "Huỷ",
                backgroundColor: "red",
                data: cancelValues,
              },
            ],
          },
          options: {
            legend: { display: true }
          },
        });
      }

      // Gọi hàm để bắt đầu quá trình
      fetchDataAndRenderBarChart();


    </script>
    <script type="text/javascript">
      //Thời Gian
      function time() {
        var today = new Date();
        var weekday = new Array(7);
        weekday[0] = "Chủ Nhật";
        weekday[1] = "Thứ Hai";
        weekday[2] = "Thứ Ba";
        weekday[3] = "Thứ Tư";
        weekday[4] = "Thứ Năm";
        weekday[5] = "Thứ Sáu";
        weekday[6] = "Thứ Bảy";
        var day = weekday[today.getDay()];
        var dd = today.getDate();
        var mm = today.getMonth() + 1;
        var yyyy = today.getFullYear();
        var h = today.getHours();
        var m = today.getMinutes();
        var s = today.getSeconds();
        m = checkTime(m);
        s = checkTime(s);
        nowTime = h + " giờ " + m + " phút " + s + " giây";
        if (dd < 10) {
          dd = '0' + dd
        }
        if (mm < 10) {
          mm = '0' + mm
        }
        today = day + ', ' + dd + '/' + mm + '/' + yyyy;
        tmp = '<span class="date"> ' + today + ' - ' + nowTime +
          '</span>';
        document.getElementById("clock").innerHTML = tmp;
        clocktime = setTimeout("time()", "1000", "Javascript");

        function checkTime(i) {
          if (i < 10) {
            i = "0" + i;
          }
          return i;
        }
      }
    </script>
