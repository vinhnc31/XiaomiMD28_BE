                <div class="embed-responsive embed-responsive-16by9">
                  <canvas class="embed-responsive-item" id="myChartb" style="width:100%;max-width:600px"></canvas>
                </div>
              </div>
            </div>
          </div>

        </div>
        <!--END right-->
      </div>



