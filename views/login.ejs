<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function showpass() {
            let show = document.getElementById('show')
            let pass = document.getElementById("pass")
            if (pass.type === 'password') {
                pass.type = "text";
                show.src = "img/eye.png"
            } else {
                pass.type = "password"
                show.src = "img/hide-eye.png"
            }
        }

    </script>
</head>

<body>
    <div class="box">
        <div class="group">
            <div class="overlap-group">
                <div class="overlap">
                    <form action="/" method="post">
                        <div class="text-wrapper">Đăng nhập</div>
                        <span class="err">
                            <%=message%>
                        </span>
                        <div class="div">
                            <input class="text-wrapper-2" placeholder="Nhập Email" name="email"
                                value="<%=email%>"></input>
                            <img class="mail" src="img/mail-1.png" />
                        </div>

                        <div class="overlap-2">
                            <div class="rectangle"></div>
                            <div class="text-wrapper-3">Password</div>
                            <div class="flex justify-between" style="align-items: baseline;">
                                <img class="hide" id="show" src="img/hide-eye.png" onclick="showpass(this)" />
                                <input type="password" class="text-wrapper-4" placeholder="Nhập mật khẩu" id="pass"
                                    name="password" value="<%=password%>"></input>
                                <img class="key" src="img/key-1.png" />
                            </div>

                        </div>

                        <div class="text-wrapper-5">Email</div>
                        <div class="text-wrapper-6">Quên mật khẩu ?</div>
                        <div class="div-wrapper">
                            <button type="submit" class="text-wrapper-7">Đăng nhập</button>
                    </form>

                </div>

            </div>
            <div class="overlap-3">
                <div class="overlap-4">
                    <img class="element-px" src="img/52616b-770-720-px-2-1-1.png" />
                    <img class="element" src="img/logoapp.jpg" />
                </div>
                <div class="text-wrapper-8">MD VN</div>
            </div>
        </div>
    </div>
    </div>

</body>


</html>